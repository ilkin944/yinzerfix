{
	"name": "yinzerfix-server",
	"version": "1.0.0",
	"author": "ilkin944",
	"license": "MIT",
	"description": "YinzerFIX Server App",
	"main": "main.js",
	"scripts": {
		"build": "tsc -p tsconfig.json",
		"check": "biome check --write .",
		"start": "node dist/main.js",
		"dev": "ts-node-dev -r tsconfig-paths/register ./src/main.ts | pino-pretty --colorize",
		"update:packages": "npx npm-check-updates -u",
		"format": "biome format . --write",
		"lint": "biome lint .",
		"migrate:eslint": "biome migrate eslint --write",
		"migrate:prettier": "biome migrate prettier --write",
		"typecheck": "tsc -noEmit"
	},
	"dependencies": {
		"@fastify/autoload": "6.0.2",
		"@fastify/cookie": "^10.0.1",
		"@fastify/cors": "^10.0.1",
		"@fastify/csrf-protection": "^7.0.1",
		"@fastify/env": "5.0.1",
		"@fastify/etag": "6.0.1",
		"@fastify/formbody": "^8.0.1",
		"@fastify/helmet": "^12.0.1",
		"@fastify/jwt": "^9.0.1",
		"@fastify/mongodb": "^9.0.1",
		"@fastify/multipart": "8.3.0",
		"@fastify/rate-limit": "10.1.1",
		"@fastify/redis": "^7.0.1",
		"@fastify/sensible": "6.0.1",
		"@fastify/static": "^8.0.1",
		"@fastify/under-pressure": "^9.0.1",
		"@fastify/websocket": "^11.0.1",
		"@sentry/node": "^8.34.0",
		"@sentry/profiling-node": "^8.34.0",
		"bcryptjs": "^2.4.3",
		"dotenv": "^16.4.5",
		"dotenv-cli": "^7.4.2",
		"fastify": "^5.0.0",
		"fastify-cli": "7.0.1",
		"fastify-mailer": "^2.3.1",
		"fastify-mongodb-sanitizer": "^1.2.3",
		"fastify-plugin": "5.0.1",
		"fastify-sse-v2": "^4.1.0",
		"fastify-stripe": "^2.4.1",
		"fastify-tsconfig": "2.0.0",
		"graphql": "16.9.0",
		"ioredis": "^5.4.1",
		"joi": "^17.13.3",
		"jsonwebtoken": "^9.0.2",
		"mercurius": "15.0.0",
		"mercurius-codegen": "6.0.0",
		"mongodb": "^6.9.0",
		"mongoose": "^8.7.0",
		"nodemailer": "^6.9.15",
		"pino": "^9.4.0",
		"stripe": "^17.1.0"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.3",
		"@types/bcryptjs": "~2.4.6",
		"@types/http-errors": "2.0.4",
		"@types/jest": "29.5.13",
		"@types/jsonwebtoken": "9.0.7",
		"@types/lint-staged": "~13.3.0",
		"@types/node": "22.7.4",
		"@types/nodemailer": "^6.4.16",
		"@types/nodemon": "1.19.6",
		"@types/tap": "~15.0.12",
		"@types/ws": "^8.5.12",
		"husky": "9.1.6",
		"jest": "29.7.0",
		"json-schema-to-typescript": "15.0.2",
		"lint-staged": "15.2.10",
		"nodemon": "3.1.7",
		"pino-pretty": "11.2.2",
		"stop-only": "^3.4.1",
		"tap": "21.0.1",
		"ts-node": "10.9.2",
		"ts-node-dev": "^2.0.0",
		"tsconfig-paths": "^4.2.0",
		"typescript": "5.6.2"
	},
	"lint-staged": {
		"{src,test}/**/*.{ts,js,json}": [
			"prettier --write '{src,test}/**/*.ts'",
			"eslint --fix",
			"stop-only --file"
		]
	}
}
